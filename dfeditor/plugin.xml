<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="DFProp Editor"
            icon="icons/dfeditor2.gif"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            class="org.dbflute.emecha.eclipse.dfeditor.DFPropEditor"
            id="org.dbflute.emecha.eclipse.dfeditor.DFPropEditor">
            <contentTypeBinding
                  contentTypeId="org.dbflute.emecha.eclipse.dfeditor.dfprop">
            </contentTypeBinding>
      </editor>
   </extension>
   <extension
          point="org.eclipse.core.contenttype.contentTypes">
          <content-type
                id="dfprop"
                name="DBFlute Configuration File"
                default-charset="UTF-8"
                file-extensions="dfprop,dataprop,diffmap">
          </content-type>
    </extension>
    <extension point="org.eclipse.ui.editors.documentProviders">
        <provider id="org.dbflute.emecha.eclipse.dfeditor.documentProviders"
               class="org.dbflute.emecha.eclipse.dfeditor.DFPropDocumentProvider"
          extensions="dfprop,dataprop,diffmap">
      </provider>
    </extension>

    <extension
          point="org.eclipse.ui.menus">
        <menuContribution
              locationURI="popup:#TextEditorContext?after=group.edit">
            <command
                  commandId="org.dbflute.emecha.eclipse.dfeditor.ToggleCommentAction" style="push">
                  <visibleWhen
                        checkEnabled="false">
                        <reference
                              definitionId="isActiveEditorAnInstanceOfDFPropEditor">
                        </reference>
                  </visibleWhen>
            </command>
        </menuContribution>
    </extension>
    <extension
          point="org.eclipse.core.expressions.definitions">
        <definition
              id="isActiveEditorAnInstanceOfDFPropEditor">
            <with
                  variable="activeEditorId">
                <equals
                      value="org.dbflute.emecha.eclipse.dfeditor.DFPropEditor">
                </equals>
            </with>
        </definition>
    </extension>
    <extension
          point="org.eclipse.ui.contexts">
       <context
             id="org.dbflute.emecha.eclipse.dfeditor.DFPropEditorScope"
             name="Editing DFPropEditor Source"
             description="Editing DFPropEditor Source Context"
             parentId="org.eclipse.ui.textEditorScope">
       </context>
    </extension>
    <extension
          point="org.eclipse.ui.commands">
        <command
            name="Toggle Comment"
            description="Toggle Comment"
            categoryId="org.dbflute.emecha.eclipse.dfeditor.category.DFPropEditor"
            id="org.dbflute.emecha.eclipse.dfeditor.ToggleCommentAction">
        </command>
        <category
              id="org.dbflute.emecha.eclipse.dfeditor.category.DFPropEditor"
              description="Editing Commands"
              name="Editing">
        </category>
    </extension>
    <extension
          point="org.eclipse.ui.bindings">
        <key sequence="M1+/"
             commandId="org.dbflute.emecha.eclipse.dfeditor.ToggleCommentAction"
             contextId="org.dbflute.emecha.eclipse.dfeditor.DFPropEditorScope"
             schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
              />
    </extension>
    <extension
          point="org.eclipse.core.resources.markers"
          id="DFPropProblemMarker"
          name="DFProp Problem">
          <super type="org.eclipse.core.resources.problemmarker"/>
          <super type="org.eclipse.core.resources.textmarker"/>
          <persistent value="true"/>
    </extension>
